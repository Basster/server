/**
 * Include the bootstrap file if its found
 *
 * @oaram bool $found
 * @param string $file
 *
 * @return mixed
 */
function requireIfExists(bool &$found, string $file)
{
    if (file_exists($file)) {
        $found = true;
        return require $file;
    }

    return null;
}

$found = false;
foreach ([
    'vendor/autoload.php',
    'config/bootstrap.php',
] as $path) {
    requireIfExists($found, __DIR__."/../$path") ||
    requireIfExists($found, __DIR__."/../../$path") ||
    requireIfExists($found, __DIR__."/../../../../$path");
}

if (!$found) {
    die('You must define an existing kernel bootstrap file, or by an alias or my a file path' . PHP_EOL);
}

$application = new \Symfony\Component\Console\Application();
$application->add(new \Apisearch\SymfonyReactServer\Console\RunServerCommand('run'));
$application->run();